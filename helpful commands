docker volume rm $(docker volume ls -f dangling=true -q) # удалить все вольюмы тех контейнеров, что удалены так как вольюмы сеществую не зависимо от контейнеров
docker volume rm $(docker volume ls -q)

docker images | grep none | awk '{print $3}' | xargs docker rmi #удалить образы которые имеют тэг none



# Backup
docker exec CONTAINER /usr/bin/mysqldump -u root --password=root DATABASE > backup.sql

# Restore
cat backup.sql | docker exec -i CONTAINER /usr/bin/mysql -u root --password=root DATABASE


# find logs docker 
docker inspect --format='{{.LogPath}}' name-container

# size containers and volumes on system
docker system df


# docker gui managment
https://documentation.portainer.io/v2.0/deploy/ceinstalldocker/
# generate password_file
echo -n mypassword > /tmp/portainer_password


# shell for startup:
#!/bin/bash
docker rm -f portainer
docker run --name portainer -d -p 9000:9000 -p 8000:8000 -v /var/run/docker.sock:/var/run/docker.sock -v /tmp/portainer_password:/tmp/portainer_password portainer/portainer-ce --admin-password-file /tmp/portainer_password
